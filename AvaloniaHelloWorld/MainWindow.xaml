<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaHelloWorld.MainWindow"
        Title="AvaloniaHelloWorld">
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
    <TextBlock Text="{Binding OS}"/>
    <TextBlock Text="{Binding Greeting}"/>
    <TextBox Text="{Binding Name}" />
    <Button Content="Say Hi!" Click="OnButtonClicked" />
  </StackPanel>
</Window>
